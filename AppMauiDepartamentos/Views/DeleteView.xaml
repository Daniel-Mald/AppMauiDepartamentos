<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMauiDepartamentos.Views.DeleteView"
             Title="DeleteView">
    <VerticalStackLayout>
        <Label Text="Seguro que deseas eliminar "></Label>
        <Label Text="{Binding Seleccionado.Titulo}"></Label>
        <Grid ColumnDefinitions="*,*">
            <Button Grid.Column="1" Text="Eliminar" Command="{Binding EliminarCommand}"></Button>
            <Button Grid.Column="0" Text="Cancelar" Command="{Binding CancelarCommand}"></Button>
        </Grid>
    </VerticalStackLayout>
</ContentPage>